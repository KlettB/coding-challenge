{
  "name": "kinexon-driver-coding-challenge",
  "version": "1.1.0",
  "description": "wysiwyg",
  "author": "Kinexon && Bastian Klett",
  "main": "index.js",
  "engines": {
    "node": "16.14.0"
  },
  "scripts": {
    "start": "node server/index.js",
    "start:dev": "npm-run-all --parallel start:server start:client",
    "start:server": "node server/index.js",
    "start:client": "cd client && npm run start",
    "postinstall": "cd client && npm install",
    "test": "jest",
    "posttest": "npm run test:cov",
    "test:cov": "jest --coverage",
    "test:badges": "npm run test:cov && jest-coverage-badges"
  },
  "repository": {
    "type": "git",
    "url": "."
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "http-status": "^1.5.0",
    "jest-coverage-badges": "^1.1.2",
    "node-static": "^0.7.7",
    "randopeep": "^0.2.5"
  },
  "devDependencies": {
    "jest": "^27.5.1",
    "jest-createspyobj": "^2.0.0",
    "jest-preset-angular": "^11.1.1",
    "npm-run-all": "^4.1.5"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/client/setupJest.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/client/node_modules/",
      "<rootDir>/client/dist/"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/client/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$"
      },
      "google": {}
    },
    "coverageReporters": [
      "json-summary", 
      "text",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
